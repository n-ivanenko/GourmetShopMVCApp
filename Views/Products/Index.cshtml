@model GourmetShopMVCApp.ViewModels.ProductSearchViewModel

<h1>Products</h1>
<p>
    <a asp-action="Create">Create New Product</a> |
    <a asp-action="CreateCategory">Create New Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Supplier</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.Supplier?.CompanyName</td>
                <td>@product.Category?.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@product.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>